<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".ScheduleNotification"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon_money"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_money"
        android:supportsRtl="true"
        android:theme="@style/Theme.CampusStage2"
        tools:targetApi="32">
        <activity
            android:name=".RecurringExpenseActivity"
            android:exported="false" />
        <activity
            android:name=".AddRecurringExpense"
            android:exported="false" />
        <activity
            android:name=".AddBudgetActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.CampusStage2"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MainActivity"

            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.CampusStage2"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>